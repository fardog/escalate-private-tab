{
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/fardog/escalate-private-tab",
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "0.1.0",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "115.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "action": {
    "default_icon": "icon.svg",
    "default_title": "__MSG_actionTitle__",
    "theme_icons": [
        {
            "dark": "icon.svg",
            "light": "icon-light.svg",
            "size": 48
        }
    ]
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
